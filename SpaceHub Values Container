--------- Space Sim Gui ---------------------------------

local MainSystemGui = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"):WaitForChild("ScreenGui")
local FrameTopRight = MainSystemGui:WaitForChild("FrameTopRight")
local ExtraMenuF = FrameTopRight:WaitForChild("ExtraMenuF")
local BottomF = MainSystemGui:WaitForChild("BottomF")
local ToolbarsF = BottomF:WaitForChild("ToolbarsF")
local ShipButtonsF = ToolbarsF:WaitForChild("ShipButtonsF")

-- OneHitAllResources --------------------------------------------------------------------

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local CENTAUR_RANGE = 500
local PLANETOID_RANGE = 500

local processed = {}

local function getFolder(name)
	return workspace:FindFirstChild(name) or ReplicatedStorage:FindFirstChild(name)
end

local function applyOneHit(mineralsFolder)
	for _, obj in ipairs(mineralsFolder:GetDescendants()) do
		if obj:GetAttribute("hitpoints") then
			if not processed[obj] then
				local hp = obj:GetAttribute("hitpoints")
				if hp > 1 then
					obj:SetAttribute("hitpoints", 1)
					processed[obj] = true
				end
			end
		end
	end
end

OneHitMineValue.Changed:Connect(function(v)
	if not v then
		table.clear(processed)
	end
end)

local function isInsideSkin(hrp, skin)
	if not skin:IsA("BasePart") then return false end
	local size = skin.Size / 2
	local localPos = skin.CFrame:PointToObjectSpace(hrp.Position)
	return math.abs(localPos.X) <= size.X
		and math.abs(localPos.Y) <= size.Y
		and math.abs(localPos.Z) <= size.Z
end

RunService.RenderStepped:Connect(function()
	if not OneHitMineValue.Value then return end

	local character = Players.LocalPlayer.Character
	local hrp = character and character:FindFirstChild("HumanoidRootPart")
	if not hrp then return end

	local planetsFolder = getFolder("Planets")
	if planetsFolder then
		for _, planet in ipairs(planetsFolder:GetChildren()) do
			local skin = planet:FindFirstChild("Skin", true)
			local minerals = planet:FindFirstChild("Minerals", true)
			if skin and minerals then
				if isInsideSkin(hrp, skin) then
					applyOneHit(minerals)
				end
			end
		end
	end

	local centaursFolder = getFolder("Centaurs")
	if centaursFolder then
		for _, centaur in ipairs(centaursFolder:GetChildren()) do
			local minerals = centaur:FindFirstChild("Minerals", true)
			if minerals then
				local refPart = centaur.PrimaryPart or centaur:FindFirstChild("Skin", true)
				if refPart and refPart:IsA("BasePart") then
					if (hrp.Position - refPart.Position).Magnitude <= CENTAUR_RANGE then
						applyOneHit(minerals)
					end
				end
			end
		end
	end

	local planetoidsFolder = workspace:FindFirstChild("Planetoids")
	if planetoidsFolder then
		for _, planetoid in ipairs(planetoidsFolder:GetChildren()) do
			local minerals = planetoid:FindFirstChild("Minerals", true)
			if minerals then
				local refPart = planetoid.PrimaryPart or planetoid:FindFirstChild("Skin", true)
				if refPart and refPart:IsA("BasePart") then
					if (hrp.Position - refPart.Position).Magnitude <= PLANETOID_RANGE then
						applyOneHit(minerals)
					end
				end
			end
		end
	end
end)


--- Always Equip Pickaxe ---------------------------------------------------------------------

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local TOOL_NAME = "Pickaxe"

local running = false

local function equipLoop()
	if running then return end
	running = true

	while alwaysEquip.Value do
		local character = player.Character
		if character then
			local humanoid = character:FindFirstChildOfClass("Humanoid")
			local backpack = player:FindFirstChild("Backpack")

			if humanoid and backpack then
				local toolInChar = character:FindFirstChild(TOOL_NAME)
				local toolInBackpack = backpack:FindFirstChild(TOOL_NAME)

				if not toolInChar and toolInBackpack then
					humanoid:EquipTool(toolInBackpack)
				end
			end
		end
		task.wait(0.2)
	end

	running = false
end

local function unequipPickaxe()
	local character = player.Character
	if not character then return end

	local humanoid = character:FindFirstChildOfClass("Humanoid")
	if humanoid then
		humanoid:UnequipTools()
	end
end

alwaysEquip.Changed:Connect(function(value)
	if value == true then
		equipLoop()
	else
		unequipPickaxe()
	end
end)

-- Always Equip Parachute -----------------------------------------------------------------

local Players_Parachute = game:GetService("Players")
local LocalPlayer_Parachute = Players_Parachute.LocalPlayer

local PARACHUTE_TOOL_NAME = "Parachute"

local Parachute_LoopRunning = false

local function StartParachuteEquipLoop()
	if Parachute_LoopRunning then return end
	Parachute_LoopRunning = true

	while AlwaysEquipParachute_Value.Value do
		local Character_Parachute = LocalPlayer_Parachute.Character
		if Character_Parachute then
			local Humanoid_Parachute = Character_Parachute:FindFirstChildOfClass("Humanoid")
			local Backpack_Parachute = LocalPlayer_Parachute:FindFirstChild("Backpack")

			if Humanoid_Parachute and Backpack_Parachute then
				local ToolInCharacter_Parachute = Character_Parachute:FindFirstChild(PARACHUTE_TOOL_NAME)
				local ToolInBackpack_Parachute = Backpack_Parachute:FindFirstChild(PARACHUTE_TOOL_NAME)

				if not ToolInCharacter_Parachute and ToolInBackpack_Parachute then
					Humanoid_Parachute:EquipTool(ToolInBackpack_Parachute)
				end
			end
		end
		task.wait(0.2)
	end

	Parachute_LoopRunning = false
end

local function UnequipParachuteTool()
	local Character_Parachute = LocalPlayer_Parachute.Character
	if not Character_Parachute then return end

	local Humanoid_Parachute = Character_Parachute:FindFirstChildOfClass("Humanoid")
	if Humanoid_Parachute then
		Humanoid_Parachute:UnequipTools()
	end
end

AlwaysEquipParachute_Value.Changed:Connect(function(newValue)
	if newValue == true then
		StartParachuteEquipLoop()
	else
		UnequipParachuteTool()
	end
end)

-- Old Inventory ----------------------------------------------------------------------

local Players_OldInv = game:GetService("Players")
local StarterGui_OldInv = game:GetService("StarterGui")
local RunService_OldInv = game:GetService("RunService")

local LocalPlayer_OldInv = Players_OldInv.LocalPlayer
local PlayerGui_OldInv = LocalPlayer_OldInv:WaitForChild("PlayerGui")

local OldInv_LoopConnection = nil

local ButtonF_OldPos = UDim2.new(0.5, 0, 1, -70)
local BottomF_NewPos = UDim2.new(0.5, 0, 1, -20)

local function GetOldInvUI()
	local ScreenGui = PlayerGui_OldInv:FindFirstChild("ScreenGui")
	if not ScreenGui then return end

	local ButtonF = ScreenGui:FindFirstChild("ButtonF", true)
	local BottomF = ScreenGui:FindFirstChild("BottomF", true)
	local ToolbarsF = ScreenGui:FindFirstChild("ToolbarsF", true)

	return ButtonF, BottomF, ToolbarsF
end

local function EnableOldInventory()
	local ButtonF, BottomF, ToolbarsF = GetOldInvUI()

	if ButtonF then
		ButtonF.Position = ButtonF_OldPos
	end

	if BottomF then
		BottomF.Position = ButtonF_OldPos
	end

	StarterGui_OldInv:SetCoreGuiEnabled(Enum.CoreGuiType.Backpack, true)

	if OldInv_LoopConnection then
		OldInv_LoopConnection:Disconnect()
	end

	OldInv_LoopConnection = RunService_OldInv.RenderStepped:Connect(function()
		if not OldInventory_Value.Value then return end
		local _, _, ToolbarLoop = GetOldInvUI()
		if ToolbarLoop then
			ToolbarLoop.Visible = false
		end
	end)
end

local function DisableOldInventory()
	local ButtonF, BottomF, ToolbarsF = GetOldInvUI()

	if ToolbarsF then
		ToolbarsF.Visible = true
	end

	if BottomF then
		BottomF.Position = BottomF_NewPos
	end

	if OldInv_LoopConnection then
		OldInv_LoopConnection:Disconnect()
		OldInv_LoopConnection = nil
	end

	StarterGui_OldInv:SetCoreGuiEnabled(Enum.CoreGuiType.Backpack, false)
end

-- React to value change
OldInventory_Value.Changed:Connect(function(isEnabled)
	if isEnabled == true then
		EnableOldInventory()
	else
		DisableOldInventory()
	end
end)

-- Ship NoClip

local Players_ShipNC2 = game:GetService("Players")
local LocalPlayer_ShipNC2 = Players_ShipNC2.LocalPlayer

local ShipNC2_LoopRunning = false

local MIN_TRANSPARENCY = 0
local MAX_TRANSPARENCY = 0.4

local SPECIAL_PART_NAMES = {
	FakeDownPart = true,
	FakeBasePart = true,
	Cabin = true
}

local CHARACTER_ALWAYS_NOCLIP = {
	FakeLeftFoot = true,
	FakeRightFoot = true,
	BeamPart  = true
}

local function SetCharacterNoClip_ShipNC2(enabled)
	local character = LocalPlayer_ShipNC2.Character
	if not character then return end

	for _, obj in ipairs(character:GetChildren()) do
		if obj:IsA("BasePart") then
			if CHARACTER_ALWAYS_NOCLIP[obj.Name] then
				obj.CanCollide = false
			else
				obj.CanCollide = not enabled
			end
		end
	end
end

local function EnableShipNoClip_Transparency()
	if ShipNC2_LoopRunning then return end
	ShipNC2_LoopRunning = true

	while ShipNoClip_Value2.Value do
		local character = LocalPlayer_ShipNC2.Character
		if character then
			local humanoid = character:FindFirstChildOfClass("Humanoid")
			if humanoid then
				local seat = humanoid.SeatPart
				if seat and seat:GetAttribute("rocket") == true then
					local shipModel = seat.Parent
					if shipModel and shipModel:IsA("Model") then
						for _, obj in ipairs(shipModel:GetDescendants()) do
							if obj:IsA("BasePart") then
								local transparencyValid =
									obj.Transparency >= MIN_TRANSPARENCY
									and obj.Transparency <= MAX_TRANSPARENCY

								local specialName = SPECIAL_PART_NAMES[obj.Name] == true

								if transparencyValid or specialName then
									obj.CanCollide = false
								end
							end
						end
					end
				end
			end
		end

		SetCharacterNoClip_ShipNC2(true)

		task.wait(0.2)
	end

	ShipNC2_LoopRunning = false
end

local function DisableShipNoClip_Transparency()
	SetCharacterNoClip_ShipNC2(false)

	local character = LocalPlayer_ShipNC2.Character
	if not character then return end

	local humanoid = character:FindFirstChildOfClass("Humanoid")
	if not humanoid then return end

	local seat = humanoid.SeatPart
	if not seat or seat:GetAttribute("rocket") ~= true then return end

	local shipModel = seat.Parent
	if not shipModel or not shipModel:IsA("Model") then return end

	for _, obj in ipairs(shipModel:GetDescendants()) do
		if obj:IsA("BasePart") then
			local transparencyValid =
				obj.Transparency >= MIN_TRANSPARENCY
				and obj.Transparency <= MAX_TRANSPARENCY

			local specialName = SPECIAL_PART_NAMES[obj.Name] == true

			if transparencyValid or specialName then
				obj.CanCollide = true
			end
		end
	end
end

ShipNoClip_Value2.Changed:Connect(function(isEnabled)
	if isEnabled then
		EnableShipNoClip_Transparency()
	else
		DisableShipNoClip_Transparency()
	end
end)

-------------------- Collect All Local Planet Gems -------------------------------------

_G.GemCollectorActive = false
task.wait()

local GemCollectorPlanetsFolder = game.Workspace:WaitForChild("Planets")

local GemCollectorTELEPORT_OFFSET = Vector3.new(0, 3, 0)
local GemCollectorCHECK_INTERVAL = 0.2

local GemCollectorIsRunning = false
local GemCollectorCurrentPlanet = nil

_G.GemCollectorActive = true

local GemCollectorOldBtn = ExtraMenuF:FindFirstChild("GemCollectorBtn")
if GemCollectorOldBtn then
	GemCollectorOldBtn:Destroy()
end

local GemCollectorBtn = Instance.new("TextButton")
GemCollectorBtn.Name = "GemCollectorBtn"
GemCollectorBtn.Size = UDim2.new(0, 30, 0, 30)
GemCollectorBtn.Position = UDim2.fromScale(0, 0)
GemCollectorBtn.AnchorPoint = Vector2.new(0, 0)
GemCollectorBtn.Text = "Collect All Gems"
GemCollectorBtn.TextScaled = true
GemCollectorBtn.BackgroundColor3 = Color3.fromRGB(170, 255, 255)
GemCollectorBtn.Visible = false
GemCollectorBtn.Font = Enum.Font.Arimo
GemCollectorBtn.Parent = ExtraMenuF
local GemCollectorBtnStroke = Instance.new("UIStroke")
GemCollectorBtnStroke.Parent = GemCollectorBtn
GemCollectorBtnStroke.Thickness = 1
GemCollectorBtnStroke.Color = Color3.fromRGB(255, 255, 255)
GemCollectorBtnStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

local function GemCollectorGetHRP()
	local GemCollectorChar = player.Character or player.CharacterAdded:Wait()
	return GemCollectorChar:WaitForChild("HumanoidRootPart")
end

local function GemCollectorPlanetHasVisibleGems(GemCollectorPlanet)
	local GemCollectorGemsFolder = GemCollectorPlanet:FindFirstChild("Gems")
	if not GemCollectorGemsFolder then return false end

	for _, GemCollectorGem in ipairs(GemCollectorGemsFolder:GetChildren()) do
		if GemCollectorGem:IsA("BasePart") and GemCollectorGem.Transparency < 1 then
			return true
		end
	end
	return false
end

local function GemCollectorGetPlanetFromSkin()
	local GemCollectorHRP = GemCollectorGetHRP()

	for _, GemCollectorPlanet in ipairs(GemCollectorPlanetsFolder:GetChildren()) do
		if GemCollectorPlanet.Name ~= "Earth" then
			local GemCollectorSkin = GemCollectorPlanet:FindFirstChild("Skin")
			if GemCollectorSkin and GemCollectorSkin:IsA("BasePart") then
				local GemCollectorRel = GemCollectorSkin.CFrame:PointToObjectSpace(GemCollectorHRP.Position)
				local GemCollectorHalf = GemCollectorSkin.Size * 0.5

				if math.abs(GemCollectorRel.X) <= GemCollectorHalf.X
					and math.abs(GemCollectorRel.Y) <= GemCollectorHalf.Y
					and math.abs(GemCollectorRel.Z) <= GemCollectorHalf.Z then
					if GemCollectorPlanetHasVisibleGems(GemCollectorPlanet) then
						return GemCollectorPlanet
					end
					return nil
				end
			end
		end
	end
	return nil
end

local function GemCollectorFireGemPrompt(GemCollectorGem)
	local GemCollectorPrompt = GemCollectorGem:FindFirstChildWhichIsA("ProximityPrompt", true)
	if not GemCollectorPrompt or not GemCollectorPrompt.Enabled then return end

	pcall(function()
		fireproximityprompt(GemCollectorPrompt)
	end)
end

local function GemCollectorCollectGems()
	if not CollectAllLocalPlanetGemValue.Value then return end
	if GemCollectorIsRunning or not GemCollectorCurrentPlanet or not _G.GemCollectorActive then return end

	GemCollectorIsRunning = true

	local GemCollectorHRP = GemCollectorGetHRP()
	local GemCollectorOriginalCFrame = GemCollectorHRP.CFrame

	local GemCollectorGemsFolder = GemCollectorCurrentPlanet:FindFirstChild("Gems")
	if not GemCollectorGemsFolder then
		GemCollectorIsRunning = false
		return
	end

	local GemCollectorGems = {}

	for _, GemCollectorGem in ipairs(GemCollectorGemsFolder:GetChildren()) do
		if GemCollectorGem:IsA("BasePart") and GemCollectorGem.Transparency < 1 then
			table.insert(GemCollectorGems, GemCollectorGem)
		end
	end

	table.sort(GemCollectorGems, function(a, b)
		local na = tonumber(a.Name:match("(%d+)$")) or 0
		local nb = tonumber(b.Name:match("(%d+)$")) or 0
		return na < nb
	end)

	for _, GemCollectorGem in ipairs(GemCollectorGems) do
		if not _G.GemCollectorActive or not CollectAllLocalPlanetGemValue.Value then break end

		GemCollectorHRP.CFrame = GemCollectorGem.CFrame + GemCollectorTELEPORT_OFFSET
		task.wait(0.25)
		GemCollectorFireGemPrompt(GemCollectorGem)
		task.wait(0.25)
	end

	if _G.GemCollectorActive then
		GemCollectorHRP.CFrame = GemCollectorOriginalCFrame
	end

	GemCollectorIsRunning = false
end

task.spawn(function()
	while _G.GemCollectorActive do
		if CollectAllLocalPlanetGemValue.Value then
			GemCollectorCurrentPlanet = GemCollectorGetPlanetFromSkin()
			GemCollectorBtn.Visible = GemCollectorCurrentPlanet ~= nil
		else
			GemCollectorBtn.Visible = false
		end
		task.wait(GemCollectorCHECK_INTERVAL)
	end
end)

GemCollectorBtn.MouseButton1Click:Connect(function()
	if not CollectAllLocalPlanetGemValue.Value then return end
	if GemCollectorIsRunning or not _G.GemCollectorActive then return end
	GemCollectorCollectGems()
end)

-------------- Extract All Artfacts From Local Planet -------------------------------------

_G.ArtifactCollectorActive = false
task.wait()

local ArtifactCollectorPlayers = game:GetService("Players")
local ArtifactCollectorWorkspace = game:GetService("Workspace")
local ArtifactCollectorReplicatedStorage = game:GetService("ReplicatedStorage")

local ArtifactCollectorPlayer = ArtifactCollectorPlayers.LocalPlayer
local ArtifactCollectorPlanetsFolder = ArtifactCollectorWorkspace:WaitForChild("Planets")
local ArtifactCollectorEvent =
	ArtifactCollectorReplicatedStorage:WaitForChild("Events"):WaitForChild("ArtifactEvent")

local ArtifactCollectorTELEPORT_OFFSET = Vector3.new(0, 3, 0)
local ArtifactCollectorCHECK_INTERVAL = 0.2

local ArtifactCollectorIsRunning = false
local ArtifactCollectorCurrentPlanet = nil

_G.ArtifactCollectorActive = true

local ArtifactCollectorBtn =
	ExtraMenuF:FindFirstChild("ArtifactCollectorBtn")

if ArtifactCollectorBtn then
	ArtifactCollectorBtn:Destroy()
end

local ArtifactCollectorBtn = Instance.new("TextButton")
ArtifactCollectorBtn.Name = "ArtifactCollectorBtn"
ArtifactCollectorBtn.Size = UDim2.new(0, 30, 0, 30)
ArtifactCollectorBtn.Position = UDim2.fromScale(0.5, 0.82)
ArtifactCollectorBtn.AnchorPoint = Vector2.new(0.5, 0.5)
ArtifactCollectorBtn.Text = "Extract All Artifacts"
ArtifactCollectorBtn.BackgroundColor3 = Color3.fromRGB(170, 255, 255)
ArtifactCollectorBtn.TextScaled = true
ArtifactCollectorBtn.Visible = false
ArtifactCollectorBtn.Font = Enum.Font.Arimo
ArtifactCollectorBtn.Parent = ExtraMenuF
local ArtifactCollectorBtnStroke = Instance.new("UIStroke")
ArtifactCollectorBtnStroke.Parent = ArtifactCollectorBtn
ArtifactCollectorBtnStroke.Thickness = 1
ArtifactCollectorBtnStroke.Color = Color3.fromRGB(255, 255, 255)
ArtifactCollectorBtnStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

local function ArtifactCollectorGetHRP()
	local ArtifactCollectorChar =
		ArtifactCollectorPlayer.Character or ArtifactCollectorPlayer.CharacterAdded:Wait()
	return ArtifactCollectorChar:WaitForChild("HumanoidRootPart")
end

local function ArtifactCollectorPlanetHasArtifacts(ArtifactCollectorPlanet)
	local ArtifactCollectorFolder = ArtifactCollectorPlanet:FindFirstChild("Artifacts")
	if not ArtifactCollectorFolder then return false end

	for _, ArtifactCollectorArtifact in ipairs(ArtifactCollectorFolder:GetChildren()) do
		if ArtifactCollectorArtifact:IsA("BasePart") then
			return true
		end
	end
	return false
end

local function ArtifactCollectorGetPlanetFromSkin()
	local ArtifactCollectorHRP = ArtifactCollectorGetHRP()

	for _, ArtifactCollectorPlanet in ipairs(ArtifactCollectorPlanetsFolder:GetChildren()) do
		if ArtifactCollectorPlanet.Name ~= "Earth" then
			local ArtifactCollectorSkin = ArtifactCollectorPlanet:FindFirstChild("Skin")
			if ArtifactCollectorSkin and ArtifactCollectorSkin:IsA("BasePart") then
				local ArtifactCollectorRel =
					ArtifactCollectorSkin.CFrame:PointToObjectSpace(ArtifactCollectorHRP.Position)
				local ArtifactCollectorHalf = ArtifactCollectorSkin.Size * 0.5

				if math.abs(ArtifactCollectorRel.X) <= ArtifactCollectorHalf.X
					and math.abs(ArtifactCollectorRel.Y) <= ArtifactCollectorHalf.Y
					and math.abs(ArtifactCollectorRel.Z) <= ArtifactCollectorHalf.Z then
					if ArtifactCollectorPlanetHasArtifacts(ArtifactCollectorPlanet) then
						return ArtifactCollectorPlanet
					end
					return nil
				end
			end
		end
	end
	return nil
end

local function ArtifactCollectorDrillArtifact(ArtifactCollectorArtifact)
	local ArtifactCollectorArgsStart = {
		"startDrilling",
		{ artifactName = ArtifactCollectorArtifact.Name }
	}
	ArtifactCollectorEvent:FireServer(unpack(ArtifactCollectorArgsStart))

	task.wait(0.15)

	local ArtifactCollectorArgsEnd = {
		"endDrilling",
		{ status = true }
	}
	ArtifactCollectorEvent:FireServer(unpack(ArtifactCollectorArgsEnd))
end

local function ArtifactCollectorExtractArtifacts()
	if not ArtifactCollectorCollectValue.Value then return end
	if ArtifactCollectorIsRunning
		or not ArtifactCollectorCurrentPlanet
		or not _G.ArtifactCollectorActive then
		return
	end

	ArtifactCollectorIsRunning = true

	local ArtifactCollectorHRP = ArtifactCollectorGetHRP()
	local ArtifactCollectorOriginalCFrame = ArtifactCollectorHRP.CFrame

	local ArtifactCollectorFolder =
		ArtifactCollectorCurrentPlanet:FindFirstChild("Artifacts")

	if not ArtifactCollectorFolder then
		ArtifactCollectorIsRunning = false
		return
	end

	local ArtifactCollectorArtifacts = {}

	for _, ArtifactCollectorArtifact in ipairs(ArtifactCollectorFolder:GetChildren()) do
		if ArtifactCollectorArtifact:IsA("BasePart") then
			table.insert(ArtifactCollectorArtifacts, ArtifactCollectorArtifact)
		end
	end

	table.sort(ArtifactCollectorArtifacts, function(a, b)
		local na = tonumber(a.Name:match("(%d+)$")) or 0
		local nb = tonumber(b.Name:match("(%d+)$")) or 0
		return na < nb
	end)

	for _, ArtifactCollectorArtifact in ipairs(ArtifactCollectorArtifacts) do
		if not _G.ArtifactCollectorActive
			or not ArtifactCollectorCollectValue.Value then
			break
		end

		ArtifactCollectorHRP.CFrame =
			ArtifactCollectorArtifact.CFrame + ArtifactCollectorTELEPORT_OFFSET
		task.wait(0.25)
		ArtifactCollectorDrillArtifact(ArtifactCollectorArtifact)
		task.wait(0.25)
	end

	if _G.ArtifactCollectorActive then
		ArtifactCollectorHRP.CFrame = ArtifactCollectorOriginalCFrame
	end

	ArtifactCollectorIsRunning = false
end

task.spawn(function()
	while _G.ArtifactCollectorActive do
		if ArtifactCollectorCollectValue.Value then
			ArtifactCollectorCurrentPlanet = ArtifactCollectorGetPlanetFromSkin()
			ArtifactCollectorBtn.Visible = ArtifactCollectorCurrentPlanet ~= nil
		else
			ArtifactCollectorBtn.Visible = false
		end
		task.wait(ArtifactCollectorCHECK_INTERVAL)
	end
end)

ArtifactCollectorBtn.MouseButton1Click:Connect(function()
	if not ArtifactCollectorCollectValue.Value then return end
	if ArtifactCollectorIsRunning or not _G.ArtifactCollectorActive then return end
	ArtifactCollectorExtractArtifacts()
end)

-------------------- Event ---------------------------------------- 

local LocalMinerals = game.Workspace:WaitForChild("Other"):WaitForChild("LocalMinerals")

-- Create / Get BoolValue
local OneHitGifts = SpaceHubValuesFolder:FindFirstChild("OneHitGifts")
if not OneHitGifts then
	OneHitGifts = Instance.new("BoolValue")
	OneHitGifts.Name = "OneHitGifts"
	OneHitGifts.Value = false
	OneHitGifts.Parent = SpaceHubValuesFolder
end

local function ApplyOneHit()
	if not OneHitGifts.Value then
		return
	end

	for _, obj in ipairs(LocalMinerals:GetDescendants()) do
		if obj:GetAttribute("gift") == true then
			if obj:GetAttribute("hitpoints") ~= nil then
				obj:SetAttribute("hitpoints", 1)
			end
		end
	end
end

OneHitGifts.Changed:Connect(ApplyOneHit)


print("SpaceHub Values Container Loaded!")

----- end ---------------------------------------------------------------------------------------


